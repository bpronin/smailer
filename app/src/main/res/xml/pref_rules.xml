<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <MultiSelectListPreference
            android:icon="@drawable/ic_triggers"
            android:entries="@array/trigger_names"
            android:entryValues="@array/trigger_values"
            android:key="email_triggers"
            android:summary="@string/email_processing_triggers"
            android:title="@string/triggers" />

    <PreferenceCategory
            android:icon="@drawable/ic_call"
            android:title="@string/phone_number_filter">

        <Preference
                android:key="phone_blacklist"
                android:title="@string/blacklist">
            <intent
                    android:targetClass="com.bopr.android.smailer.ui.PhoneBlacklistFilterActivity"
                    android:targetPackage="com.bopr.android.smailer" />
        </Preference>

        <Preference
                android:key="phone_whitelist"
                android:title="@string/whitelist">
            <intent
                    android:targetClass="com.bopr.android.smailer.ui.PhoneWhitelistFilterActivity"
                    android:targetPackage="com.bopr.android.smailer" />
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
            android:icon="@drawable/ic_text"
            android:title="@string/text_filter">

        <Preference
                android:key="text_blacklist"
                android:title="@string/blacklist">
            <intent
                    android:targetClass="com.bopr.android.smailer.ui.TextBlacklistFilterActivity"
                    android:targetPackage="com.bopr.android.smailer" />
        </Preference>

        <Preference
                android:key="text_whitelist"
                android:title="@string/whitelist">
            <intent
                    android:targetClass="com.bopr.android.smailer.ui.TextWhitelistFilterActivity"
                    android:targetPackage="com.bopr.android.smailer" />
        </Preference>

    </PreferenceCategory>


</PreferenceScreen>
