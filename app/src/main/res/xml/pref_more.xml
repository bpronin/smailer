<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.preference.MultiSelectListPreference
        android:icon="@drawable/ic_pref_content"
        android:dialogTitle="@string/title_email_message_content"
        android:entries="@array/titles_email_content"
        android:entryValues="@array/email_content_values"
        android:key="email_content"
        android:summary="@string/title_what_email_contain"
        android:title="@string/title_content" />

    <androidx.preference.EditTextPreference
        android:icon="@drawable/ic_pref_device"
        android:dialogMessage="@string/title_device_alias_hint"
        android:inputType="textNoSuggestions"
        android:key="device_alias"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/title_device_alias" />

    <androidx.preference.ListPreference
        android:icon="@drawable/ic_pref_language"
        android:dialogTitle="@string/title_email_language"
        android:entries="@array/titles_language"
        android:entryValues="@array/email_locale_values"
        android:key="email_locale"
        android:title="@string/title_email_language_hint" />

    <androidx.preference.SwitchPreference
        android:key="resend_unsent"
        android:title="@string/title_resend_hint" />

    <androidx.preference.SwitchPreference
        android:key="notify_send_success"
        android:title="@string/title_notify_send_success" />

    <androidx.preference.SwitchPreference
        android:key="mark_processed_sms_as_read"
        android:title="@string/title_mark_processed_sms_as_read" />

</androidx.preference.PreferenceScreen>
