<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <MultiSelectListPreference
        android:dialogTitle="@string/title_email_message_content"
        android:entries="@array/email_content_titles"
        android:entryValues="@array/email_content_values"
        android:key="email_content"
        android:summary="@string/title_what_email_contain"
        android:title="@string/title_content"/>

    <EditTextPreference
        android:dialogMessage="@string/title_device_alias_hint"
        android:inputType="textNoSuggestions"
        android:key="device_alias"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/title_device_alias"/>

    <ListPreference
        android:dialogTitle="@string/title_email_language"
        android:entries="@array/email_locale_titles"
        android:entryValues="@array/email_locale_values"
        android:key="email_locale"
        android:title="@string/title_email_language_hint"/>

    <SwitchPreference
        android:key="resend_unsent"
        android:summary="@string/title_resend_hint"
        android:title="@string/title_resend"/>

    <SwitchPreference
        android:key="notify_send_success"
        android:summary="@string/title_notify_send_success"
        android:title="@string/title_notify_on_send"/>

</PreferenceScreen>
