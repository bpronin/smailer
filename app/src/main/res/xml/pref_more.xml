<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <MultiSelectListPreference
        android:dialogTitle="@string/pref_dialog_title_email_content"
        android:entries="@array/email_content_titles"
        android:entryValues="@array/email_content_values"
        android:key="email_content"
        android:summary="@string/pref_description_what_email_contain"
        android:title="@string/pref_title_content"/>

    <EditTextPreference
        android:dialogMessage="@string/pref_description_device_alias"
        android:inputType="textNoSuggestions"
        android:key="device_alias"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_device_alias"/>

    <ListPreference
        android:dialogTitle="@string/pref_dialog_title_email_locale"
        android:entries="@array/email_locale_titles"
        android:entryValues="@array/email_locale_values"
        android:key="email_locale"
        android:title="@string/pref_title_email_locale"/>

    <SwitchPreference
        android:key="resend_unsent"
        android:summary="@string/pref_description_resend_unsent"
        android:title="@string/pref_title_resend_unsent"/>

    <SwitchPreference
        android:key="notify_send_success"
        android:summary="@string/pref_description_notify_send_success"
        android:title="@string/pref_title_notify_send_success"/>

</PreferenceScreen>
