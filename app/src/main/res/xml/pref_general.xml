<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="service_enabled"
        android:summary="@string/pref_description_enable"
        android:title="@string/pref_title_enable" />

    <!--<PreferenceCategory android:title="@string/pref_title_sender">-->
    <EditTextPreference
        android:inputType="textEmailAddress"
        android:key="sender_email_address"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_sender_email" />

    <EditTextPreference
        android:inputType="textPassword"
        android:key="sender_email_password"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_sender_password" />
    <!--</PreferenceCategory>-->

    <EditTextPreference
        android:inputType="textEmailAddress"
        android:key="recipient_email_address"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_recipients" />

</PreferenceScreen>
