<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="service_enabled"
        android:title="@string/pref_title_enable" />

    <EditTextPreference
        android:inputType="textEmailAddress"
        android:key="sender_account"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_sender_account" />

    <com.bopr.android.smailer.settings.PasswordPreference
        android:inputType="textPassword"
        android:key="sender_password"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_sender_password" />

    <EditTextPreference
        android:inputType="textEmailAddress"
        android:key="recipient_email_address"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_recipients" />

    <!--<Preference-->
        <!--android:key="test"-->
        <!--android:title="Test" />-->

</PreferenceScreen>
