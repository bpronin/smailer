<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <com.bopr.android.smailer.ui.preference.EmailPreference
        android:dialogLayout="@layout/editor_email"
        android:dialogMessage="@string/title_account_hint"
        android:dialogTitle="@string/title_outgoing_email_address"
        android:icon="@drawable/ic_pref_account"
        android:inputType="textEmailAddress"
        android:key="sender_account"
        android:maxLines="1"
        android:singleLine="true"
        android:title="@string/title_sender_account" />

    <com.bopr.android.smailer.ui.preference.PasswordPreference
        android:dialogLayout="@layout/editor_password"
        android:dialogMessage="@string/title_email_password_hint"
        android:dialogTitle="@string/title_password"
        android:icon="@drawable/ic_pref_password"
        android:key="sender_password"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/title_password" />

    <androidx.preference.EditTextPreference
        android:inputType="textNoSuggestions"
        android:key="sender_host"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/title_host" />

    <androidx.preference.EditTextPreference
        android:digits="0123456789"
        android:inputType="textNoSuggestions"
        android:key="sender_port"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/title_port" />

    <com.bopr.android.smailer.ui.preference.TestServerPreference
        android:key="test_mail_server"
        android:persistent="false"
        android:widgetLayout="@layout/pref_test_mail_server" />

</androidx.preference.PreferenceScreen>
