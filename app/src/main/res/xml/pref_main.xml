<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
            android:icon="@drawable/ic_rules"
            android:key="rules"
            android:summary="@string/when_send_email"
            android:title="@string/rules">
        <intent
                android:targetClass="com.bopr.android.smailer.ui.RulesActivity"
                android:targetPackage="com.bopr.android.smailer" />
    </Preference>

    <Preference
            android:icon="@drawable/ic_out"
            android:key="messengers"
            android:title="@string/messengers">
        <intent
                android:targetClass="com.bopr.android.smailer.ui.EventConsumersActivity"
                android:targetPackage="com.bopr.android.smailer" />
    </Preference>

    <Preference
            android:icon="@drawable/ic_history"
            android:key="history"
            android:title="@string/history">
        <intent
                android:targetClass="com.bopr.android.smailer.ui.HistoryActivity"
                android:targetPackage="com.bopr.android.smailer" />
    </Preference>

    <Preference
            android:icon="@drawable/ic_settings"
            android:key="options"
            android:title="@string/more_options">
        <intent
                android:targetClass="com.bopr.android.smailer.ui.MoreOptionsActivity"
                android:targetPackage="com.bopr.android.smailer" />
    </Preference>
</PreferenceScreen>
