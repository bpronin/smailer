<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.preference.Preference
        android:icon="@drawable/ic_account_round"
        android:key="sender_account"
        android:title="@string/sender" />

    <androidx.preference.Preference
        android:icon="@drawable/ic_recipient"
        android:key="recipients_address"
        android:title="@string/recipients" >
        <intent
            android:targetClass="com.bopr.android.smailer.ui.RecipientsActivity"
            android:targetPackage="com.bopr.android.smailer" />
        />
    </androidx.preference.Preference>

    <androidx.preference.Preference
        android:icon="@drawable/ic_rules"
        android:key="rules"
        android:summary="@string/when_send_email"
        android:title="@string/rules">
        <intent
            android:targetClass="com.bopr.android.smailer.ui.RulesActivity"
            android:targetPackage="com.bopr.android.smailer" />
        />
    </androidx.preference.Preference>

    <androidx.preference.MultiSelectListPreference
        android:dialogTitle="@string/email_message_content"
        android:entries="@array/email_content_names"
        android:entryValues="@array/email_content_values"
        android:icon="@drawable/ic_content"
        android:key="email_content"
        android:summary="@string/what_email_contains"
        android:title="@string/email_content" />

    <androidx.preference.EditTextPreference
        android:dialogMessage="@string/device_name_to_show"
        android:icon="@drawable/ic_device"
        android:inputType="textNoSuggestions"
        android:key="device_alias"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/device_name" />

    <androidx.preference.ListPreference
        android:dialogTitle="@string/email_language"
        android:entries="@array/language_names"
        android:entryValues="@array/email_locale_values"
        android:icon="@drawable/ic_language"
        android:key="email_locale"
        android:title="@string/email_message_language" />

    <androidx.preference.Preference
        android:icon="@drawable/ic_remote"
        android:key="remote_control_enabled"
        android:title="@string/remote_control">
        <intent
            android:targetClass="com.bopr.android.smailer.ui.RemoteControlActivity"
            android:targetPackage="com.bopr.android.smailer" />
    </androidx.preference.Preference>

    <androidx.preference.Preference
        android:icon="@drawable/ic_history"
        android:key="history"
        android:title="@string/call_history">
        <intent
            android:targetClass="com.bopr.android.smailer.ui.HistoryActivity"
            android:targetPackage="com.bopr.android.smailer" />
        />
    </androidx.preference.Preference>

    <androidx.preference.Preference
        android:icon="@drawable/ic_options"
        android:key="options"
        android:title="@string/options">
        <intent
            android:targetClass="com.bopr.android.smailer.ui.OptionsActivity"
            android:targetPackage="com.bopr.android.smailer" />
        />
    </androidx.preference.Preference>
</androidx.preference.PreferenceScreen>
