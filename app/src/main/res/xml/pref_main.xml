<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="service_enabled"
        android:summaryOff="@string/pref_description_service_off"
        android:summaryOn="@string/pref_description_service_on"
        android:title="@string/pref_title_enable"/>

    <PreferenceScreen
        android:key="outgoing_server"
        android:title="@string/pref_title_server"/>

    <PreferenceScreen
        android:key="recipients_address"
        android:title="@string/pref_title_recipients"/>

    <MultiSelectListPreference
        android:dialogTitle="@string/pref_dialog_title_trigger"
        android:entries="@array/email_trigger_titles"
        android:entryValues="@array/email_trigger_values"
        android:key="email_triggers"
        android:summary="@string/pref_description_when_to_send"
        android:title="@string/pref_title_trigger"/>

    <PreferenceScreen
        android:key="more"
        android:title="@string/pref_title_more"/>

</PreferenceScreen>
