<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bopr.android.smailer">


    <uses-permission android:name="android.permission.GET_ACCOUNTS" /><!-- To auto-complete the email text field in the login form with the user's emails -->
    <!--<uses-permission android:name="android.permission.READ_PROFILE" />-->
    <uses-permission android:name="android.permission.READ_CONTACTS" /><!-- To add contact name into email body -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" /><!-- To process incoming sms -->
    <uses-permission android:name="android.permission.READ_SMS" /><!-- To process outgoing -->
    <uses-permission android:name="android.permission.WRITE_SMS" /><!-- To mark sms as read -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /><!-- To add location in email body -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /><!-- To add location in email body -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /><!-- To process incoming phone calls -->
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" /><!-- To process outgoing phone calls -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /><!-- To restart application services at device boot -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /><!-- To check internet connection -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /><!-- To run content listener in foreground service -->

    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.ACCOUNT_MANAGER" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <application
        android:allowBackup="true"
        android:backupAgent="AppBackupAgent"
        android:fullBackupContent="@xml/backup_scheme"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:restoreAnyVersion="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- See: https://developer.android.com/google/backup/signup -->
        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAI4Ju-ayl5GJi0GgUprqv9f4BpIq7lr3-NFUwctw" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="0826344a90cfbc5883d6103b68cd8441cc4eede1" />

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.ServerActivity"
            android:label="@string/sender" />

        <activity
            android:name=".ui.RecipientsActivity"
            android:label="@string/recipients" />

        <activity
            android:name=".ui.PhoneBlacklistActivity"
            android:label="@string/blacklist" />

        <activity
            android:name=".ui.PhoneWhitelistActivity"
            android:label="@string/whitelist" />

        <activity
            android:name=".ui.TextBlacklistActivity"
            android:label="@string/blacklist" />

        <activity
            android:name=".ui.TextWhitelistActivity"
            android:label="@string/whitelist" />

        <activity
            android:name=".ui.MoreActivity"
            android:label="@string/preferences" />

        <activity
            android:name=".ui.HistoryActivity"
            android:label="@string/call_history" />

        <activity
            android:name=".ui.LegalInfoActivity"
            android:label="@string/open_source" />

        <activity
            android:name=".ui.RulesActivity"
            android:label="@string/rules_for_sending" />

        <service android:name=".CallProcessorService" />

        <service android:name=".ContentObserverService" />

        <service
            android:name=".RemoteControlService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <receiver
            android:name=".CallReceiver"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".BootReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>