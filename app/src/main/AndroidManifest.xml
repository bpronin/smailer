<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bopr.android.smailer">

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name=".settings.ServerSettingsActivity"
            android:label="@string/pref_title_outgoing_server">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.bopr.android.smailer.SERVER_SETTINGS" />
            </intent-filter>
        </activity>

        <activity
            android:name=".settings.EmailContentSettingsActivity"
            android:label="@string/pref_title_email_content">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.bopr.android.smailer.EMAIL_CONTENT_SETTINGS" />
            </intent-filter>
        </activity>

        <activity
            android:name=".settings.DebugSettingsActivity"
            android:label="Debug">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.bopr.android.smailer.DEBUG_SETTINGS" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".SmsReceiver"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <service android:name=".MailerService" />

    </application>

</manifest>

